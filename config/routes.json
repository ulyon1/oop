{
  "routes": [
    {
      "methods": ["GET"],
      "path": "/",
      "action": "Metinet:Controllers:ConferencesController::viewConferences"
    },
    {
      "methods": ["GET", "POST"],
      "path": "/signup",
      "action": "Metinet:Controllers:MembersController::signUp"
    },
    {
      "methods": ["GET", "POST"],
      "path": "/signin",
      "action": "Metinet:Controllers:SecurityController::signIn"
    },
    {
      "methods": ["GET"],
      "path": "/signout",
      "action": "Metinet:Controllers:SecurityController::signOut"
    },
    {
      "methods": ["GET"],
      "path": "/blog",
      "action": "Metinet:Controllers:BlogController::latestPosts"
    },
    {
      "methods": ["GET", "POST"],
      "path": "/blog/new-post",
      "action": "Metinet:Controllers:BlogController::newBlogPost"
    }
  ]
}
